{
  "expo": {
    "name": "rtl-app",
    "slug": "rtl-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "locales": {
      "en": "./src/i18n/locales/english.json",
      "de": "./src/i18n/locales/german.json",
      "ar": "./src/i18n/locales/arabic.json"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yuriy.dobryi.rtl-app",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.yuriy.dobryi.rtlapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [["expo-splash-screen"], "expo-font"]
  }
}
